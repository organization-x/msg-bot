{
	"compilerOptions": {
		"outDir": "build",
		"rootDir": "src",
		"target": "ESNext",
		"module": "ESNext",
		"strict": true,
		"moduleResolution": "NodeNext",
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": false
	},
	"exclude": ["build", "node_modules"]
}